<div class="container">
  <div class="row">
    <div class="col mt-5 mb-3"> <!-- ジャンル検索領域を1列左にずらす -->
      <%= render 'public/searches/search_genre', genres: @genres %>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-8 mt-5">
      <h3 class="mb-3">商品一覧(全<%= @items.count %>件)</h3>
      <div class="row mt-3">
        <%= render 'public/items/index', items: @items %>
      </div>
      <div class="col d-flex justify-content-center mt-5"> <!-- ページネーション部分を少し下にずらす -->
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
