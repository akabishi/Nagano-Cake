<style>
  .aspect-ratio-box {
    position: relative;
    width: 100%;
    padding-bottom: 90%; /* 画像のアスペクト比を4:5にしたい場合は、この値を調整 */
  }

  .aspect-ratio-box img {
    position: absolute;
    top: 10px;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

<div class="row">
  <% items.each do |item| %>
    <div class="col-sm-3">
      <div class="aspect-ratio-box">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image(250, 300), class: "img-fluid" %>
        <% end %>
      </div>
      <div class="mt-3 text-left">
        <h6 class="item-name" style="font-family: serif;"><%= item.name %></h6>
        <% if item.is_active == true %>
          <p class="item-price">¥ <%= item.price.to_s(:delimited) %></p>
        <% else %>
          <p class="item-status text-danger">販売停止中</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

