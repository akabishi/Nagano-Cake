<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h2 class="text-center mb-3" style="font-weight:bold; color:#A07B35; font-family: serif;">ログイン</h2>
      <div style="padding: 20px; margin-bottom: 10px; border: 5px double #A07B35; background-color: #fffaf0;">
        <h6 class="ml-5 mt-3" style="font-weight:bold;">会員の方はこちらからログイン<h6>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table>
          <tbody>
            <tr>
              <td class="pl-5 pt-3"><%= f.label :email, "メールアドレス" %></td>
              <td class="pl-5"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
            </tr>
            <tr>
              <td class="pl-5 py-2"><%= f.label :password, "パスワード" %></td>
              <td class="pl-5"><%= f.password_field :password, autocomplete: "current-password" %></td>
            </tr>
            <tr>
              <% if devise_mapping.rememberable? %>
                <td></td>
                <td class="pl-5"><%= f.check_box :remember_me %> <%= f.label :remember_me %></td>
              <% end %>
            </tr>
            <tr>
              <td></td>
              <td></td>
              <td class="pt-3"><%= f.submit "ログイン", class:"btn btn-success"  %></td>
            </tr>
          </tbody>
        </table>
        <% end %>
      </div>
      <div class="mt-4">
        <h5 style="font-weight:bold; color:#A07B35; font-family: serif;">会員登録がお済でない方</h5>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>
