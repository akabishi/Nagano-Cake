<div class="contaier">
  <div class="row">
    <div class="col-10 mx-auto">

    <h3>新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="row">
        <label class="col-lg-3">名前</label>
        <div class="col-lg-3">
          <%= f.label :"(性)" %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "name" ,class: "form-control"%>
        </div>

        <div class="col-lg-3">
          <%= f.label :"(名)" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "name" ,class: "form-control"%>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">フリガナ</label>
        <div class="col-lg-3">
          <%= f.label :"(セイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" ,class: "form-control"%>
        </div>

        <div class="col-lg-3">
          <%= f.label :"(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" ,class: "form-control"%>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "form-control"%>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">郵便番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" ,class: "form-control"%>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-3">
          <%= f.text_field :address, autofocus: true, autocomplete: "street-address" ,class: "form-control"%>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">電話番号(ハイフンなし)</label>
        <div class="col-lg-3">
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel" ,class: "form-control"%>
        </div>
      </div><br>

      <div class="row">
        <label class="col-lg-3">
          パスワード<% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "new-password" ,class: "form-control"%>
        </div>
      </div><br>

      <div>
        <%= f.label :"パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: "form-control"%>
      </div><br>

      <div>
        <%= f.submit "新規登録" , class: "btn btn-success"%>
      </div>

      <h3>既に登録済みの方</h3>
      <div class="col-lg-3">
        <%= render "public/shared/links" %>
      </div>
      <% end %>

    </div>
  </div>
</div>