<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3><strong>登録情報編集</strong></h3>
      <%= form_with(model: @customer, url: update_information_path ,method: :PATCH) do |f| %>
        <div>
            <div>
              <%= f.label :"氏名"%>
              <%= f.text_field :last_name, placeholder: "令和", class: "form-control"%>
              <%= f.text_field :first_name, placeholder: "道子", class: "form-control"%>
            </div>
            <div>
              <%= f.label :"フリガナ"%>
              <%= f.text_field :last_name_kana, placeholder: "レイワ", class: "form-control"%>
              <%= f.text_field :first_name_kana, placeholder: "ミチコ", class: "form-control"%>
            </div>
            <div>
              <%= f.label :"郵便番号"%>
              <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control"%>
            </div>
            <div>
              <%= f.label :"住所"%>
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control"%>
            </div>
            <div>
              <%= f.label :"電話番号"%>
              <%= f.text_field :phone_number,placeholder: "0000000", class: "form-control"%>
            </div>
            <div>
              <%= f.label :"メールアドレス"%>
              <%= f.email_field :email, placeholder: "sample@example.com", autofocus: true, autocomplete: "email", class: "form-control"%>
            </div>
        </div>

        <div>
          <%= f.submit "編集内容を保存", class: "btn btn-success"%>
          <%= link_to " 退会する", unsubscribe_path, class: "btn btn-danger"%>
        </div>
      <% end %>
    </div>
  </div>
</div>