<div class= "container">
  <div class= "row">
    <div class= "col-11 mx-auto">
      <h2>マイページ</h2>

      <div class="d-flex align-items-center">
        <h4>登録情報</h4>
        <%= link_to "編集する", edit_information_path, class: "btn btn-success" %>
      </div>
      <table class='table table-bordered'>
        <tr>
          <td>氏名</td>
          <td>
            <%= @customer.first_name %>
            <%= @customer.last_name %>
          </td>
        </tr>
        <tr>
          <td>カナ</td>
          <td>
            <%= @customer.first_name_kana %>
            <%= @customer.last_name_kana %>
          </td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td>
            <%= @customer.postal_code %>
          </td>
        </tr>
        <tr>
          <td>住所</td>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td>
            <%= @customer.phone_number %>
          </td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td>
            <%= @customer.email %>
          </td>
        </tr>
      </table>

      <div class="d-flex align-items-center">
        <h4>配送先</h4>
        <%= link_to "一覧を見る", addresses_path, class: "btn btn-info" %>
      </div>
      <div class="d-flex align-items-center">
        <h4>注文履歴</h4>
        <%= link_to "一覧を見る", orders_path, class: "btn btn-info" %>
      </div>
  </div>
</div>