<div class="container p-3">
  <div class="row">
    <h4>注文履歴一覧</h4>
    <div class="col-md-12">
      <table class="table">
        <tr>
          <td>注文日</td>
          <td>配送先</td>
          <td>注文商品</td>
          <td>支払金額</td>
          <td>ステータス</td>
          <td>注文詳細</td>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_details.each do |order_detail|  %>
                <p><%= order_detail.item.name %></p>
              <% end %>
            </td>
            <td><%= order.total_price %>円</td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_path(order.id), class: "btn btn-info"  %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>