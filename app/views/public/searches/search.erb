<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="row">
        <div class="col-lg-8">
          <label class="h4 bg-light mt-4" style="padding-left: 15px;">検索結果</label>
        </div>
      </div>
      <div class="row">
  <div class="col-lg-12">
    <table class="table table-borderless border-top mt-4">
   <tr>
     <th>商品名</th>
     <th>商品説明</th>
     <th>ジャンル</th>
     <th>税込価格<br>(税抜価格)</th>
     <th>商品名</th>
     <th>販売状況</th>
     <th colspan="5"></th>
   </tr>
     </thead>
      <tbody>
      <% if @items.present? %>
      <% @items.each do |item| %>
       <tr>
        <td><%= image_tag item.get_image(100,100) %> </td>
        <td><%= item.name %></td>
        <td><%= item.introduction %></td>
        <td><%= item.genre ? item.genre.name : 'ジャンルが設定されていません' %></td>
        <td>
         <%= item.with_tax_price.to_s(:delimited) %> (<%= item.price.to_s(:delimited) %>) 円
        </td>
        <td><%= item.is_active ? '販売中' : '販売停止中' %></td>
        <td>
         <%= link_to "購入する", item_path(item), class: "btn btn-success" %>
        </td>
       </tr>
       <% end %>
       <% else %>
       <tr>
        <td>アイテムが見つかりませんでした。</td>
       </tr>
      <% end %>
      </tbody>
     </table>
    </div>
   </div>
  </div>
 </div>
</div>