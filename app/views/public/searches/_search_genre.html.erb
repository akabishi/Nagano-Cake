<table class = "table text-center">
  <thead style="background-color: #fffaf0;">
    <tr>
      <th style="color: #A07B35;">Genre</th>
    </tr>
  </thead>
  <tbody style="background-color: #fffaf0;">
    <% Genre.all.each do |genre| %>
    <tr>
      <td>
        <%= link_to genre.name, "/public/genres/#{genre.id}/search/", method: :get, :style => "color: #A07B35;" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>