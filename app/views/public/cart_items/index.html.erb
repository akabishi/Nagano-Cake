<div class = "container">
  <div class = "row">
    <div class="col-5 mt-2">
      <h2 class="mb-4" style="font-weight:bold; color:#A07B35; font-family:'Times New Roman'; font-size:45px; "><strong>Shopping Cart</strong></h2>
    </div>
    <% unless @cart_items.empty? %>
      <div class="col-2 offset-md-5 mt-5 mb-4 text-right">
        <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger", style: "border-radius: 10px; white-space: nowrap;", data: { confirm: "本当に空にしますか？" } %>
      </div>
      <table class="table table-bordered table-condensed" style="background-color: #fffaf0;">
        <thead class="thead-light">
          <thead class="thead-light">
            <tr>
              <th style="background-color: #ccc8c0; color: #333;">商品名</th>
              <th style="background-color: #ccc8c0; color: #333;">単価(税込)</th>
              <th style="background-color: #ccc8c0; color: #333;">数量</th>
              <th style="background-color: #ccc8c0; color: #333;">小計</th>
              <th style="background-color: #ccc8c0; color: #333;"></th>
            </tr>
        </thead>
        </thead>
        <tbody style="background-color: #fffaf0;">
          <% @cart_items.each do |cart_item| %>
          <tr id="cart_item_<%= cart_item.id %>">
            <td style="font-family: serif;">
              <%= image_tag(cart_item.item.get_image(90,80), class: 'm-1') %>
              <%= cart_item.item.name %></td>

            <td="align-middle"><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td id="select-form" class="align-middle">

              <!--個数選択のセレクトボックスの作成-->
              <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
                <!--item_idというキーに対してcart_item.item.idという値をブラウザに表示せず送信-->
                <%= f.hidden_field :item_id, value: cart_item.item.id %>
                <%= f.select :amount, *[1..10] %>
                <%#= f.submit "変更", class: "btn btn-success ml-3", style: "border-radius: 10px;" %>
              <% end %>
            </td>
            <!--アイテムごとの小計-->

              <td class="subtotal-area">
                <%= render 'public/cart_items/subtotal', cart_item: cart_item %>
              </td>
            <td>
              <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger", style: "border-radius: 10px;", data: { confirm: "削除しますか？" } %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="row">
        <div class = "col-2 text-left">
          <%= link_to "買い物を続ける", root_path, class: "btn btn-info", style: "width: 150px; height: 40px; white-space: nowrap; border-radius: 10px;" %>
        </div>
      </div>
        <div class="col-3 offset-md-7 mb-5 pull-right">
          <ul class = "list-group list-group-horizontal">
            <li class="list-group-item list-group-item-secondary" style="background-color: #ccc8c0; font-weight: bold;">合計金額</li>
            <li class="list-group-item" id= "total-area">
              <%= render 'public/cart_items/total', total_price: @total_price %>
            </li>
          </ul>
        </div>
      </div>
      <div class="row mt-7">
        <div class="col-12 text-center"> <!-- text-center クラスを追加 -->
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success", style: "width: 150px; height: 40px; white-space: nowrap; border-radius: 10px;" %>
        </div>
      </div>
    <% else %>

  <div class="col-12 text-center mt-5 mb-5"> <!-- Increase the 'mt' and 'mb' values for more top and bottom margin -->
    <h3 class="mb-4">
      <%= link_to root_path, style:"font-weight:bold; color:#000000; font-family:'Times New Roman'; font-size:70px;" do %>
        <strong>Cart is Empty</strong>
      <% end %>
    </h3>
    
  </div>
</div>

<!--下記は変更ボタンを押さなくてもselectで個数を選択すると自動で更新が発火されるコードです-->
<script>
  $(document).on("change", "#select-form select", function() {
    let form = $(this).closest("form");
    let url = form.attr("action");
    let method = form.attr("method");
    let data = form.serialize();

    $.ajax({
      url: url,
      method: method,
      data: data,
      success: function(response) {
        let cartItemRow = form.closest("tr#cart_item");
        cartItemRow.find(".subtotal-area").html(response);
      },
      error: function(xhr) {
        console.log(xhr.responseText);
      }
    });
  });
</script>
