            <% end %>
          </li>
          <li>
            <%= link_to cart_items_path, class: 'nav-link text-light', :style => "font-family:'Times New Roman'; font-size:20px;"  do %>
              Cart
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-light', :style => "font-family:'Times New Roman'; font-size:20px;"  do %>
