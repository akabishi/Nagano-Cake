<header style="position: fixed; top: 0; width: 100%; background: #0A6651; height: 100px; z-index: 1000;">
  <nav class= "navbar navbar-expand-lg navbar-dark" style="background: #0A6651; height:100px;">
    <div class="container">
      <div class="logo-section d-flex justify-content-start">
        <a class="navbar-brand" href="/" style="font-family:'Times New Roman'; font-size:30px;"><span>NaganoCake</span></a>
      </div> 
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if admin_signed_in? %>
            <li>
              <%= link_to admin_items_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;"  do%>
               <i class="fa-solid fa-cake-candles mr-2">Items
              <% end %>
            </li>
            <li>
              <%= link_to admin_customers_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;"  do%>
              <i class="fa-solid fa-user-tie"></i>Customers
              <% end %>
            </li>
            <li>
              <%= link_to admin_root_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;"  do%>
              <i class="fa-solid fa-list"></i>Orders
              <% end %>
            </li>
            <li>
              <%= link_to admin_genres_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;"  do%>
                <i class="fa-solid fa-cookie"></i>Gernres
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-light' , :style => "font-family:'Times New Roman'; font-size:20px;" do %>
                <i class="fa-solid fa-right-from-bracket"></i>Log Out
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to home_about_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;"  do %>
                <i class="fa-solid fa-hand-holding-heart mr-2">About
              <% end %>
            </li>
            <li>
              <%= link_to items_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;" do %>
               <i class="fa-solid fa-cake-candles mr-2"></i> Items
              <% end %>
            </li>
            <li>
              <%= link_to new_customer_registration_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;" do %>
                <i class="fa-solid fa-right-to-bracket mr-2"></i> Sign Up
              <% end %>
            </li>
            <li>
              <%= link_to new_customer_session_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;" do %>
                <i class="fa-solid fa-arrow-right-to-bracket mr-2"></i> Log In
              <% end %>
            </li>
          <% end %>
        </ul>
   </nav>
</header>
