<div class = "container">
  <div class = "row">
    <div class = "col-8 mx-auto">
      <h2>ジャンル変更</h2>

      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "変更を保存", class: "btn btn-info" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
