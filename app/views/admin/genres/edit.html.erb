<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2 class="mb-4" style="font-weight:bold; color:#A07B35; font-family:serif; font-size:45px; text-align: center;"><strong>Category Edit</strong></h2>

      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <div class="form-row align-items-center">
          <div class="col-md-3 mb-1 text-md-right mx-auto">
            <%= f.label :name, "ジャンル名" %>
          </div>
          <div class="col-md-5 mb-1 mx-auto">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-md-2 mb-2 mx-auto">
            <%= f.submit "変更を保存", class: "btn btn-info btn-block", style: "border-radius: 12px;" %>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>
