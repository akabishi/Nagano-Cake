<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2 class="mt-5" style="font-weight:bold; color:#A07B35; font-family:serif; font-size:45px; "><strong>Category List&Addition</strong></h2>

      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-row align-items-center mt-4">
          <div class="col-md-3 mb-2">
            <%= f.label :name, "ジャンル名", class: "text-md-right", style: "font-size: 22px; font-weight:bold; " %>
          </div>
          <div class="col-md-6 mb-2">
            <%= f.text_field :name, class: "form-control" %>
          </div>
          <div class="col-md-3 mb-2">
            <%= f.submit "新規登録", class: "btn btn-info btn-sm" , style: "width: 170px; height: 40px; border-radius: 12px;" %>
          </div>
        </div>
      <% end %>

      <table class="table table-bordered table-condensed mt-4" style="background-color: #fffaf0;">
        <thead class="thead-center">
          <tr>
            <th class="text-center" style="background-color: #ccc8c0; padding-right: 50px;">ジャンル</th>
            <th class="text-center" style="background-color: #ccc8c0;"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td class="text-center" style="padding-right: 50px;"><%= genre.name %></td>
            <td class="text-center">
              <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-info btn-sm", style: "width: 120px; height: 40px; border-radius: 12px; line-height:30px;" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
