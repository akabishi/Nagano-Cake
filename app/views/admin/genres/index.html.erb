<div class = "container">
  <div class = "row">
    <div class = "col-8 mx-auto">
      <h2>ジャンル一覧・追加</h2>

      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-info" %>
        </div>
      <% end %>

      <table class = " table table-borderd">
        <thead class="thead-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-info" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
