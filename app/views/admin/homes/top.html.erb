<div class= "container">
  <div class= "row">
    <div class="col-lg-8">
      <label class="h4 bg-light px-4 mt-4">注文履歴一覧</label>
      <table class="table table-borderless border-top mt-4">

        <thead class="bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order), :style => "color: #A07B35;" do %>
                  <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                <% end %>
              </td>
              <td><%= order.name %></td>
              <td>
                <% total_amount = order.order_details.sum(&:amount) %>
                <%= total_amount %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @orders %>
    </div>
  </div>
</div>
