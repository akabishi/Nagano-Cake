<div class= "container">
  <div class= "row">
    <div class="col-lg-8">
      <label class="h4 bg-light px-4 mt-4">注文履歴一覧</label>
      <table class="table table-borderless border-top mt-4">
        <!-- mt-4を追加して上に4単位のマージンを適用 -->
        <thead class="bg-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order_detail), :style => "color: #A07B35;" do %>
                  <%= order_detail.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                <% end %>
              </td>
              <td><%= order_detail.order.name %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.making_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @order_details %>
    </div>
  </div>
</div>
