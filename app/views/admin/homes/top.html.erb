<div class= "container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="row">
        <div class="col-lg-8">
          <h2 class="mb-4" style="font-weight:bold; color:#A07B35; font-family:'Times New Roman'; font-size:45px;"><strong>Order history</strong></h2>
        </div>
        </div>
        
        <div class="row">
        <div class="col-lg-12">
        <table class="table table-borderless border-top mt-4" style="background-color: #fffaf0;">
          <thead class="bg-light">
            <tr>
              <th style="background-color: #ccc8c0; width: 20%;">購入日時</th>
              <th style="background-color: #ccc8c0; width: 20%;">購入者</th>
              <th style="background-color: #ccc8c0; width: 20%;">注文個数</th>
              <th style="background-color: #ccc8c0; width: 20%;">注文ステータス</th>
            </tr>
          </thead>
          <tbody style="background-color: #fffaf0;">
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order), :style => "color: #A07B35;" do %>
                  <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                <% end %>
              </td>
              <td><%= order.name %></td>
              <td>
                <% total_amount = order.order_details.sum(&:amount) %>
                <%= total_amount %>
              </td>
              <td><%= order.status_i18n %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class = "row justify-content-center" >
     <%= paginate @orders, theme: 'twitter-bootstrap-4' %>
    </div>
    </div>
  </div>
</div>
