<div class="container">
  <div class="row mb-2">
    <div class="col-lg-2"></div>
    <div class="col-lg-10">
    <h2 class="mb-4" style="font-weight:bold; color:#A07B35; font-family:'Times New Roman'; font-size:45px;"><strong>New Item Registration</strong></h2>
    </div>
    </div>

    <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="row mt-4">
      <div class="col-lg-3"></div>
      <div class="col-lg-2">
        <strong><%= f.label :商品画像 %></strong>
        </div>
        <div class="col-lg-7">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-lg-3"></div>
        <div class="col-lg-2">
          <strong><%= f.label :商品名 %></strong>
        </div>
        <div class="col-lg-7">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-lg-3"></div>
        <div class="col-lg-2">
          <strong><%= f.label :商品説明 %></strong>
        </div>
        <div class="col-lg-7">
          <%= f.text_area :introduction, size: "30x5" %>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-lg-3"></div>
        <div class="col-lg-2">
          <strong><%= f.label :ジャンル %></strong>
        </div>
        <div class="col-lg-7">
          <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-lg-3"></div>
        <div class="col-lg-2">
          <strong><%= f.label :税抜価格 %></strong>
        </div>
        <div class="col-lg-7">
          <%= f.text_field :price %>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-lg-3"></div>
        <div class="col-lg-2">
          <strong><%= f.label :販売ステータス %></strong>
        </div>
        <div class="col-lg-7">
          <%= f.radio_button :is_active, "true" %>販売中
          <%= f.radio_button :is_active, "false" %>販売停止中
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-lg-12 text-center">
          <%= f.submit '新規登録', class:"btn btn-success", style: "width: 150px; height: 50px; border-radius: 10px;" %>
        </div>
        </div>
    <% end %>
    </div>
