
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="row">
        <div class="col-lg-8">
          <h2 class="mb-4" style="font-weight:bold; color:#A07B35; font-family:'Times New Roman'; font-size:45px;"><strong>Items Lists</strong></h2>
        </div>
        <div class="col-lg-4 text-right mt-4">
          <%= link_to "+", new_admin_item_path, class:"btn btn-light rounded-circle shadow", style:"font-size: inherit; padding: 12px 16px;" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12">
          <%= render "admin/items/index", items: @items %>
        </div>
      </div>
    </div>
  </div>

  <div class="row d-flex justify-content-center mt-4">
    <%= paginate @items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>