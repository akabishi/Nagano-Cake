<div class = "container">
  <div class = "mt-3">
    <% if @model == 'customer' %>
      <h3><strong>顧客　</strong>検索結果</h3>
      <h5>キーワード："<%= @content %>"</h5>
      <%= render 'admin/customers/index', customers: @records %>
    <% elsif @model == 'item' %>
      <h3><strong>商品　</strong>検索結果</h3>
      <h5>キーワード："<%= @content %>"</h5>
      <%= render 'admin/items/index', items: @records %>
    <% end %>
  </div>
</div>