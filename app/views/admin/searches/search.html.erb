<div class = "container">
  <div class = "mt-3">
    <% if @model == 'customer' %>
      <h2 style="font-weight:bold; color:#A07B35; font-family: 'Times New Roman';">Customers search for <strong>"<%= @content %>"</strong></h2>
      <%= render 'admin/customers/index', customers: @records %>
    <% elsif @model == 'item' %>
      <h2 style="font-weight:bold; color:#A07B35; font-family: 'Times New Roman';">Items search for <strong>"<%= @content %>"</strong></h2>
      <%= render 'admin/items/index', items: @records %>
    <% end %>
  </div>
</div>