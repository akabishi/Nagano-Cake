<table class="table table-borderless border-top mt-4" style="background-color: #fffaf0;">
  <thead class="bg-light">
    <tr>
      <th style="background-color: #ccc8c0; width: 20%;">会員ID</th>
      <th style="background-color: #ccc8c0; width: 20%;">氏名</th>
      <th style="background-color: #ccc8c0; width: 20%;">メールアドレス</th>
      <th style="background-color: #ccc8c0; width: 20%;">ステータス</th>
    </tr>
  </thead>
  <tbody style="background-color: #fffaf0;">
  <% customers.each do |customer| %>
    <tr>
      <td><%= customer.id %></td>
      <td>
        <%= link_to admin_customer_path(customer) do %>
          <%= customer.full_name %>
        <% end %>
      </td>
      <td><%= customer.email %></td>
      <th>
        <% if customer.is_active %>
          <span class="text-success">有効</span>
        <% else %>
          <span class="text-danger">退会</span>
        <% end %>
      </th>
    </tr>
  <% end %>
  </tbody>
</table>