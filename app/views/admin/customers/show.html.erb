<div class = "container">
  <div class = "row">
    <div class = "col mt-3">
      <h3 class="mb-4" style="font-weight:bold; color:#A07B35; font-family: serif;; font-size:30px; "><strong><%= @customer.full_name %></strong> さんの会員詳細</h3>
      <table class = "table table-borderless", style="background-color: #fffaf0;">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @customer.is_active %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-danger">退会</span>
            <% end %>
           </th>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
            <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-info ml-5" %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>