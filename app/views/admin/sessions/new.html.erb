<div class="container">
  <div class="row mb-5">
    <div class="col-lg-2"></div>
    <div class="col-lg-10">
      <label class="h4 bg-light px-4">管理者ログイン</label>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-horizontal" }) do |f| %>
    <div class="form-group row mb-5">
      <%= f.label :メールアドレス, class: "col-lg-3 col-form-label text-lg-right" %>
      <div class="col-lg-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
    <div class="form-group row mb-3">
      <%= f.label :パスワード, class: "col-lg-3 col-form-label text-lg-right" %>
      <div class="col-lg-7">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", style: "margin-bottom: 30px; margin-top: -10px;" %>
      </div>
    </div>
    <div class="form-group row mb-5">
      <div class="col-lg-7 offset-lg-3">
        <%= f.submit "ログイン", class: "btn btn-sm btn-primary", style: "width: 170px; height: 40px; border-radius: 12px;" %>
      </div>
    </div>

    <% if false %>
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <% end %>
  <% end %>

  <%= render "admin/shared/links" %>
</div>
